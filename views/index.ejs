<% } %>
<table id="table_cust" class="table table-striped table-bordered table-hover">
<thead>
<tr class="tableheader">
<th style="width:40px">#</th>
<th style="width:140px">Name</th>
<th style="width:140px">Gender</th>
<th style="width:140px">Country</th>
<th style="width:140px">Phone</th>
<th></th>
</tr>
</thead>
<tbody>
<% data.forEach(function(user) { %>
<tr>
	<td><%= user.id %></td>
	<td><%= user.name %></td>
	<td><%= user.gender %></td>
	<td><%= user.country %></td>
	<td><%= user.phone %></td>
	<td><button onclick="location.href='/edit_customer?id=<%= user.id %>'" type="button" class="btn bg-purple margin">Edit</button><button onclick="location.href='/delete_customer?id=<%= user.id %>'" type="button" class="btn margin btn-danger">Delete</button></td>
</tr>
<% }); %>

</tbody>
